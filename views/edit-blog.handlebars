<h2>Edit Post</h2>
<div class="row mt-4">
    <div class="col-md-6">


        <form class="form new-post-form" id="new-post-form">
            <div class="form-group">
                <label for="title-new-post">Blog Name:</label>
                <input class="form-input" type="text" id="title" name={{id}} value='{{title}}'></input>
            </div>
            <div class="form-group">
                <label for="content-new-post">Content:</label>
                <textarea class="form-input" id="content-new-post" name="content-new-post">{{textContent}}</textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">submit</button>
            </div>
        </form>
    </div>
</div>

<br>

{{> comment-section}}

